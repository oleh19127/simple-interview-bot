{
  "name": "simple-interview-bot",
  "version": "1.0.0",
  "description": "A Telegram bot for conducting interviews. Manage themes, questions, and options easily. Get random questions, update, delete, and explore various commands.",
  "main": "index.ts",
  "scripts": {
    "build:ts": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "npm run build:ts && node dist/index.js",
    "format": "prettier --write \"**/*.{json,md}\"",
    "biome": "npx @biomejs/biome check --apply src",
    "prepare": "husky install"
  },
  "keywords": [
    "telegram",
    "bot",
    "interview",
    "preparation",
    "questions",
    "themes",
    "random question"
  ],
  "author": "Oleh Husak (https://github.com/oleh19127)",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/node": "^20.12.12",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "@grammyjs/conversations": "^1.2.0",
    "dotenv": "^16.4.5",
    "grammy": "^1.23.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "random-js": "^2.1.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  }
}
